{
	"manifest_version": 2,
	"name": "cMusic Player",
	"description": "Приложение для прослушивания Вашей музыки ВКонтакте",
	"version": "2.0.10",
	"icons": {
		"128": "icons/128.png"
	},
	"app": {
		"background": {
			"scripts": [
				"background.js"
			]
		}
	},
	"commands": {
	  "next-track": {
		  "description": "Следующий трек",
		  "global": true,
		  "suggested_key": {
			  "default": "MediaNextTrack"
		  }
	  },
	  "previous-track": {
		"description": "Предыдущий трек",
		"global": true,
		"suggested_key": {
		  "default": "MediaPrevTrack"
		}
	  },
	  "play-pause": {
		  "description": "Плей/Пауза",
		  "global": true,
		  "suggested_key": {
			  "default": "MediaPlayPause"
		  }
	  },
	  "stop": {
		  "description": "Остановить воспроизведение",
		  "global": true,
		  "suggested_key": {
			  "default": "MediaStop"
		  }
	  }
	},
	"permissions": [
		"https://api.vk.com/*",
		"https://oauth.vk.com/*",
		"http://ws.audioscrobbler.com/*",
		"http://fonts.googleapis.com/*",
		"http://userserve-ak.last.fm/*",
		"https://www.google-analytics.com/",
		"fileSystem",
		"storage",
		"webview",
		"notifications",
		"identity",
		"syncFileSystem",
		"unlimitedStorage",
		"<all_urls>"
	],
	"minimum_chrome_version": "36.0.0.0"
}