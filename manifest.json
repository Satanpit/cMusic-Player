{
	"manifest_version": 2,
	"name": "cMusic Player",
	"description": "Приложение для прослушивания музыки ВКонтакте",
	"version": "3.0",
	"icons": {

	},
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"permissions": [
		"https://api.vk.com/*",
		"https://oauth.vk.com/*",
		"http://ws.audioscrobbler.com/*",
		"http://fonts.googleapis.com/*",
		"http://userserve-ak.last.fm/*",
		"https://www.google-analytics.com/",
        "alarms",
        "fullscreen",
        "identity",
		"fileSystem",
		"storage", 
		"webview",
		"notifications",
		"identity",
		"syncFileSystem",
        "unlimitedStorage",
		"*://*/*"
	]
}