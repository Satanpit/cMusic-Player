{
  "name": "cMusic Player",
  "description": "Приложение для прослушивания музыки ВКонтакте",
  "version": "3.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    }
  },
  "offline_enabled": true,
  "commands": {
    "play": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Play",
      "global": true
    }
  },
  "permissions": [
    "https://api.vk.com/*",
    "https://oauth.vk.com/*",
    "http://ws.audioscrobbler.com/*",
    "http://fonts.googleapis.com/*",
    "http://userserve-ak.last.fm/*",
    "https://www.google-analytics.com/",
    "alarms",
    "fullscreen",
    "identity",
    "fileSystem",
    "storage",
    "webview",
    "notifications",
    "identity",
    "syncFileSystem",
    "unlimitedStorage",
    "*://*/*",
    "<all_urls>"
  ]
}